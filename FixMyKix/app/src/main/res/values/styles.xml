<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextStyleHeadingTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/brandon_grotesque_medium
        </item>
    </style>

    <style name="TextStyleHeadingBlack">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/brandon_grotesque_medium
        </item>
    </style>

    <style name="TextStyleHeadingWhite">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/brandon_grotesque_medium
        </item>
    </style>

    <style name="TextStyleContentHeading">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/brandon_grotesque_medium
        </item>
    </style>

    <style name="TextStyleContent">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey_color</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">
            @font/brandongrotesque_regular
        </item>
    </style>

    <style name="TextStyleContentLightSmall">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">
            @font/sourcesans_proregular
        </item>
    </style>

    <style name="TextStyleSecondarySmallInformation">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">
            @font/brandon_grotesque_medium
        </item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/brandon_grotesque_medium</item>
        <item name="android:background">@drawable/bg_boutton_white_rounded</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="EditTextStyleDark">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/brandon_grotesque_medium</item>
        <item name="android:background">@color/grey_color</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="TextStyleOptions">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/sign_up_button</item>
        <item name="android:fontFamily">@font/brandon_grotesque_medium</item>
    </style>

    <style name="TextStyleOptionsBlack">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/brandon_grotesque_medium</item>
    </style>

    <style name="TextStyleBlueButton">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/brandon_grotesque_bold
        </item>
        <item name="android:background">@drawable/bg_boutton_theme_rectangle</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:paddingLeft">@dimen/padding_normal_x</item>
        <item name="android:paddingRight">@dimen/padding_normal_x</item>
        <item name="android:gravity">center</item>
        <item name="android:alpha">3</item>
    </style>

    <style name="TextStyleBorder">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/brandon_grotesque_bold
        </item>
        <item name="android:background">@drawable/bg_boutton_white</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:paddingLeft">@dimen/padding_normal_x</item>
        <item name="android:paddingRight">@dimen/padding_normal_x</item>
        <item name="android:gravity">center</item>
        <item name="android:alpha">7</item>
    </style>

    <style name="TextStyleBlueButtonBlue">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/brandon_grotesque_bold
        </item>
        <item name="android:background">@drawable/bg_boutton_blue_rectangle</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:paddingLeft">@dimen/padding_normal_x</item>
        <item name="android:paddingRight">@dimen/padding_normal_x</item>
        <item name="android:gravity">center</item>
        <item name="android:alpha">3</item>
    </style>

    <style name="TextStyleLight">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/textFieldBolder</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">
            @font/brandon_grotesque_medium
        </item>
    </style>

    <style name="TextStylePurple">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">
            @font/brandon_grotesque_medium
        </item>
    </style>

    <style name="TextStylePurpleLight">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/sign_up_button</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">
            @font/brandongrotesque_regular
        </item>
    </style>
    <style name="WideDialog" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>
</resources>
