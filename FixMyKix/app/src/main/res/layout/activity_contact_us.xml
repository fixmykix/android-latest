<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_container_header_contact_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_color"
        android:padding="@dimen/activity_horizontal_padding">

        <ImageView
            android:id="@+id/iv_back_contact_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_keyboard_backspace" />

        <TextView
            style="@style/TextStyleHeadingWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Contact us" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_container_header_contact_us"
        android:orientation="vertical">

        <TextView
            style="@style/TextStyleContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="@dimen/padding_small"
            android:padding="@dimen/padding_small_plus"
            android:text="2934 TELEGRAPH AVEOAKLAND, CA, 94609" />

        <TextView
            style="@style/TextStyleContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="@dimen/padding_small"
            android:padding="@dimen/padding_small_plus"
            android:text="JAMESG@FIXMYKI.COM" />

        <TextView
            style="@style/TextStyleContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:drawableLeft="@drawable/ic_call"
            android:drawablePadding="@dimen/padding_small"
            android:padding="@dimen/padding_small_plus"
            android:text="(510) 689-4282" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_normal_x"
        android:src="@drawable/social_media" />

</RelativeLayout>
