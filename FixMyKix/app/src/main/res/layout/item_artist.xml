<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_container_artist"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    android:elevation="1dp"
    app:cardCornerRadius="@dimen/radius_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_grey"
        android:orientation="horizontal"
        android:padding="@dimen/padding_small">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_service" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small_plus"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_artist_artist_name"
                style="@style/TextStyleContentLightSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artist name" />

            <TextView
                android:id="@+id/tv_item_artist_add"
                style="@style/TextStyleSecondarySmallInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:text="13/7 new south valves, Toranto, Brick" />

            <TextView
                android:id="@+id/tv_item_artist_cost"
                style="@style/TextStyleContentLightSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
