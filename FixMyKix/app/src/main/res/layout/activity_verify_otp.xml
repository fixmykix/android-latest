<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_padding">

    <ImageView
        android:id="@+id/iv_back_verify_otp"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
        android:tint="@color/colorPrimary" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_extra_large_x"
        android:src="@mipmap/ic_launcher" />

    <TextView
        style="@style/TextStyleSecondarySmallInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_normal_x"
        android:padding="@dimen/padding_small"
        android:text="@string/enter_otp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_activate_account_verification_1"
            style="@style/TextStyleContent"
            android:layout_width="@dimen/dimen_edit_text_verification_code"
            android:layout_height="@dimen/dimen_edit_text_verification_code"
            android:background="@drawable/border_grey"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number" />

        <EditText
            android:id="@+id/et_activate_account_verification_2"
            style="@style/TextStyleContent"
            android:layout_width="@dimen/dimen_edit_text_verification_code"
            android:layout_height="@dimen/dimen_edit_text_verification_code"
            android:layout_marginLeft="@dimen/margin_second_small"
            android:background="@drawable/border_grey"
            android:gravity="center"
            android:imeOptions="normal"
            android:inputType="number" />

        <EditText
            android:id="@+id/et_activate_account_verification_3"
            style="@style/TextStyleContent"
            android:layout_width="@dimen/dimen_edit_text_verification_code"
            android:layout_height="@dimen/dimen_edit_text_verification_code"
            android:layout_marginLeft="@dimen/margin_second_small"
            android:background="@drawable/border_grey"
            android:gravity="center"
            android:imeOptions="normal"
            android:inputType="number" />

        <EditText
            android:id="@+id/et_activate_account_verification_4"
            style="@style/TextStyleContent"
            android:layout_width="@dimen/dimen_edit_text_verification_code"
            android:layout_height="@dimen/dimen_edit_text_verification_code"
            android:layout_marginLeft="@dimen/margin_second_small"
            android:background="@drawable/border_grey"
            android:gravity="center"
            android:imeOptions="normal"
            android:inputType="number" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_done_otp"
        style="@style/TextStyleBlueButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_normal"
        android:text="@string/done" />

    <TextView
        android:id="@+id/tv_resend_otp"
        style="@style/TextStylePurple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_second_small"
        android:text="@string/resend_otp" />

</LinearLayout>