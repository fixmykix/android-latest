<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_color"
        android:padding="@dimen/activity_horizontal_padding">

        <ImageView
            android:id="@+id/iv_back_order_confirm_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_keyboard_backspace" />

        <TextView
            style="@style/TextStyleHeadingWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Order Confirmation" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_padding">

            <TextView
                style="@style/TextStyleContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thank you for ordering with" />

            <TextView
                android:id="@+id/tv_order_confirm_order_with"
                style="@style/TextStyleSecondarySmallInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_text_signup_email"
                android:layout_marginTop="@dimen/margin_small"
                android:text="Jack" />

            <TextView
                style="@style/TextStyleContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="Artist" />

            <TextView
                android:id="@+id/et_order_confirm_to"
                style="@style/TextStyleSecondarySmallInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_text_signup_email"
                android:layout_marginTop="@dimen/margin_small"
                android:text="Jack Sparrow" />

            <TextView
                style="@style/TextStyleContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="Price $ " />

            <TextView
                android:id="@+id/et_order_confirm_desc"
                style="@style/TextStyleSecondarySmallInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_text_signup_email"
                android:layout_marginTop="@dimen/margin_small"
                android:text="500" />

            <TextView
                style="@style/TextStyleContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="Turn around time" />

            <TextView
                style="@style/TextStyleSecondarySmallInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_text_signup_email"
                android:layout_marginTop="@dimen/margin_small"
                android:text="4 weeks" />

            <TextView
                style="@style/TextStyleContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="Shoe name" />

            <TextView
                style="@style/TextStyleSecondarySmallInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_text_signup_email"
                android:layout_marginTop="@dimen/margin_small"
                android:text="Nick" />

            <TextView
                style="@style/TextStyleContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="Description" />

            <TextView
                style="@style/TextStyleSecondarySmallInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_text_signup_email"
                android:layout_marginTop="@dimen/margin_small"
                android:text="orem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum." />

            <TextView
                style="@style/TextStyleContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="Images" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_order_confirm_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small" />

            <TextView
                android:id="@+id/tv_order_confirm_done"
                style="@style/TextStyleBlueButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_normal"
                android:text="Confirm Order"
                android:textAllCaps="true" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
