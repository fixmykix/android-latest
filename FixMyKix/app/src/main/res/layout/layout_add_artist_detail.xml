<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/shoo1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/transparent_black"
        android:padding="@dimen/padding_normal">

        <ImageView
            android:id="@+id/iv_back_artist_detail"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:tint="@color/colorPrimary" />

        <TextView
            android:id="@+id/tv_heading_artist_detail"
            style="@style/TextStyleHeadingWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_large"
            android:gravity="center"
            android:text="Complete your details" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_heading_artist_detail"
            android:layout_marginTop="@dimen/margin_normal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_second_small">

                <EditText
                    android:id="@+id/artist_business_name"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Business name"
                    android:inputType="text"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/input_text_artist_service_description"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:hint="Service description"
                    android:inputType="text"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/input_text_artist_twitter_link"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:hint="Twitter link"
                    android:inputType="text"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/input_text_artist_youtube_link"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:hint="Youtube link"
                    android:inputType="text"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/input_text_artist_facebook_link"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:hint="Facebook link"
                    android:inputType="text"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/input_text_artist_snapchat_link"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:hint="Snapchat link"
                    android:inputType="text"
                    android:padding="12dp" />


                <EditText
                    android:id="@+id/input_text_artist_instagram_link"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:hint="Instagram link"
                    android:inputType="text"
                    android:padding="12dp" />

                <ImageView
                    android:id="@+id/iv_artist_detail"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_add_iamge_artist_detail"
                    style="@style/TextStylePurple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:drawableLeft="@drawable/ic_attach_file_black_24dp"
                    android:gravity="center_vertical"
                    android:text="Add Image" />

                <TextView
                    android:id="@+id/tv_submit_artist_detail"
                    style="@style/TextStyleBlueButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:text="Submit"
                    android:textAllCaps="true" />

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>